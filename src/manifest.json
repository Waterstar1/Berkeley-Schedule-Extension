{
  "name": "Berkeley Professor Ratings",
  "version": "1.1",
  "manifest_version": 2,
  "browser_action": {
    "default_icon": "cal_logo.png"
  },
  "permissions": [
    "webRequest",
    "https://solr-aws-elb-production.ratemyprofessors.com/*",
    "https://classes.berkeley.edu/search/*",
    "https://www.berkeleytime.com/api/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://classes.berkeley.edu/search/*"],
      "css": ["popup.css"],
      "js": ["jquery-3.5.1.js", "content.js", "core.js"],
      "all_frames": true
    }
  ],
  "background": {
    "scripts": ["jquery-3.5.1.js", "background.js"]
  }
}